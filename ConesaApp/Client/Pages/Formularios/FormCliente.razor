@using ConesaApp.Database.Data.Entities;
<EditForm Model="cliente" OnValidSubmit="onValidSubmit">
    
    <DataAnnotationsValidator />

    <div class="form-grup">
        <label>Nombre</label>
        <div>
            <InputText class="form-control" @bind-Value="@cliente.Nombre" />
            <ValidationMessage For="@(() => cliente.Nombre)" />
        </div>

        <label>Apellido</label>
        <div>
            <InputText class="form-control" @bind-Value="@cliente.Apellido" />
            <ValidationMessage For="@(() => cliente.Apellido)" />
        </div>

        <label>Email</label>
           <div>
            <InputText class="form-control" @bind-Value="@cliente.Mail" />
            <ValidationMessage For="@(() => cliente.Mail)" />
        </div>
        
        <label>Telefono</label>
        <div>
            <InputText class="form-control" @bind-Value="@cliente.Telefono" />
        </div>

        <label>Ciudad</label>
        <div>
            <InputText class="form-control" @bind-Value="@cliente.Ciudad" />
            <ValidationMessage For="@(() => cliente.Ciudad)" />
        </div>

        <label>Direccion</label>
        <div>
            <InputText class="form-control" @bind-Value="@cliente.Direccion" />
        </div>
    </div>

    <br/>

    <button class="btn btn-primary" type="submit">Aceptar</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>

</EditForm>

@code {
    [Parameter] public Cliente cliente { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
    [Parameter] public Action OnClose { get; set; }

}


